{
  "name": "watchthis-sharing-service",
  "version": "1.0.0",
  "description": "Sharing service for WatchThis - handles media sharing between users",
  "keywords": [
    "media",
    "microservice",
    "sharing",
    "social",
    "watchthis"
  ],
  "homepage": "https://github.com/aimeerivers/watchthis-sharing-service#readme",
  "bugs": {
    "url": "https://github.com/aimeerivers/watchthis-sharing-service/issues"
  },
  "license": "ISC",
  "author": "aimee rivers",
  "main": "dist/src/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aimeerivers/watchthis-sharing-service.git"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\" \"npm run tailwind:css:watch\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "package:lint": "npx npm-package-json-lint .",
    "start": "node dist/src/server.js",
    "start:watch": "nodemon dist/src/server.js",
    "tailwind:css": "postcss src/styles/style.css -o public/styles/style.css",
    "tailwind:css:watch": "postcss src/styles/style.css -o public/styles/style.css --watch --verbose",
    "test": "NODE_ENV=test node --test dist/test/*.test.js"
  },
  "dependencies": {
    "app-root-path": "3.1.0",
    "dotenv": "17.2.2",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "mongoose": "8.18.0",
    "pug": "3.0.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/postcss": "4.1.13",
    "@tailwindcss/typography": "0.5.16",
    "@types/express": "5.0.3",
    "@types/node": "24.3.1",
    "@types/supertest": "6.0.3",
    "autoprefixer": "10.4.21",
    "concurrently": "9.2.1",
    "eslint-config-plus-prettier": "4.2.0",
    "nock": "14.0.10",
    "nodemon": "3.1.10",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "postcss-minify": "1.2.0",
    "supertest": "7.1.4",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2"
  },
  "prettier": "eslint-config-plus-prettier/prettier"
}
